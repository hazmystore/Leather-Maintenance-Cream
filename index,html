    <script>
        // Initialize AOS
        AOS.init({
            duration: 800,
            easing: 'ease-in-out',
            once: true
        });

        // Initialize Feather Icons
        feather.replace();

        // Countdown Timer
        function updateCountdown() {
            const now = new Date();
            const midnight = new Date();
            midnight.setHours(24, 0, 0, 0);
            
            const diff = midnight - now;
            
            const hours = Math.floor((diff % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60));
            const minutes = Math.floor((diff % (1000 * 60 * 60)) / (1000 * 60));
            const seconds = Math.floor((diff % (1000 * 60)) / 1000);
            
            document.getElementById('countdown').innerHTML = 
                `${hours.toString().padStart(2, '0')}:${minutes.toString().padStart(2, '0')}:${seconds.toString().padStart(2, '0')}`;
        }
        setInterval(updateCountdown, 1000);
        updateCountdown();

        // View Counter
        function updateViewCounter() {
            let views = parseInt(localStorage.getItem('pageViews')) || 1278;
            views += Math.floor(Math.random() * 3) + 1;
            localStorage.setItem('pageViews', views);
            document.getElementById('view-counter').textContent = views.toLocaleString();
        }
        updateViewCounter();

        // Stock Counter
        function updateStockCounter() {
            let stock = parseInt(localStorage.getItem('productStock')) || 27;
            if (stock > 0) {
                stock -= Math.floor(Math.random() * 2);
                localStorage.setItem('productStock', stock);
                document.getElementById('stock-count').textContent = stock;
                document.getElementById('stock-bar').style.width = `${stock}%`;
                
                if (stock < 10) {
                    document.getElementById('stock-bar').classList.remove('bg-blue-600');
                    document.getElementById('stock-bar').classList.add('bg-red-500');
                }
            }
        }
        updateStockCounter();
        setInterval(updateStockCounter, 30000);

        // Image Modal
        function openModal(src) {
            const modal = document.getElementById('imageModal');
            const modalImg = document.getElementById('modalImage');
            modal.style.display = "block";
            modalImg.src = src;
        }

        function closeModal() {
            document.getElementById('imageModal').style.display = "none";
        }

        // Order Popup
        function showPopup() {
            setTimeout(() => {
                document.getElementById('orderPopup').style.display = 'block';
            }, 3000);
        }
        showPopup();

        function closePopup() {
            document.getElementById('orderPopup').style.display = 'none';
        }

        // Random Order Popups
        const names = ['Budi', 'Ani', 'Citra', 'Doni', 'Eka', 'Fajar', 'Gita', 'Hadi'];
        const jobs = ['Pengusaha', 'PNS', 'Dokter', 'Guru', 'Mahasiswa', 'Karyawan Swasta', 'Freelancer', 'Ibu Rumah Tangga'];
        const cities = ['Jakarta', 'Bandung', 'Surabaya', 'Medan', 'Makassar', 'Yogyakarta', 'Semarang', 'Bali'];

        function randomOrderPopup() {
            const randomName = names[Math.floor(Math.random() * names.length)];
            const randomJob = jobs[Math.floor(Math.random() * jobs.length)];
            const randomCity = cities[Math.floor(Math.random() * cities.length)];
            
            const popup = document.getElementById('orderPopup');
            const avatar = popup.querySelector('.avatar');
            const nameElement = popup.querySelector('p.font-medium');
            const cityElement = popup.querySelector('.bg-green-100');
            
            avatar.textContent = randomName.charAt(0);
            nameElement.textContent = `${randomName} - ${randomJob}`;
            cityElement.textContent = randomCity;
            
            popup.style.display = 'block';
            popup.style.transform = 'translateY(100%)';
            setTimeout(() => {
                popup.style.transform = 'translateY(0)';
            }, 100);
            
            setTimeout(() => {
                popup.style.transform = 'translateY(100%)';
                setTimeout(() => {
                    popup.style.display = 'none';
                }, 500);
            }, 10000);
        }

        setInterval(randomOrderPopup, 15000);
    </script>
</body>
